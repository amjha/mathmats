{
  "name": "mathmats",
  "version": "0.1.3",
  "description": "Simple math library written in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && npm run test",
    "run": "node dist/index.js",
    "test": "mocha -r ts-node/register test/**/*.test.ts",
    "format": "prettier --write \"src/**/*.ts\" --ignore-path ./.prettierignore --write",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run start",
    "prepublishOnly": "npm test",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amjha/mathmats.git"
  },
  "keywords": [
    "math",
    "TypeScript",
    "NodeJS"
  ],
  "author": "amjha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amjha/mathmats/issues"
  },
  "homepage": "https://github.com/amjha/mathmats#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "mocha": "^8.0.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@types/node": "^14.0.13"
  }
}
